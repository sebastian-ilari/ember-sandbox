<h4>{{model.name}}</h4>
<br>
<div class="row">
    <div class="col-xs-4 col-md-4 col-lg-4">
        <p>
            <img {{bind-attr src=model.avatar_url}} style="width: 180px;"/>
        </p>
        <p>
            {{model.company}}<br>
            {{model.location}}<br>
            {{model.email}}<br>
        </p>
        <table class="table table-striped">
            <tbody>
                <tr>
                    <td>
                        Followers
                    </td>
                    <td>
                        {{model.followers}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Repositories
                    </td>
                    <td>
                        {{model.public_repos}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Gists
                    </td>
                    <td>
                        {{model.public_gists}}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<br>
